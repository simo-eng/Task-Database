@model BlogViewModel
@{
    Layout = "_DashBoard";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form methode="Post" asp-action="AddBlog" class="row">
                <div class="mb-3">
                    <label asp-for="blog.Title" for="" class="form-label">Blog Title</label>
                    <input type="text"
                           
                          
                           asp-for="blog.Title"
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="blog.Title" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="blog.Description" for="" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="blog.Description"
                              class="form-control"
                              placeholder=""></textarea>
                    <span asp-validation-for="blog.Description" class="text-danger"></span>
                </div>




                <div class="mb-3 col-lg-6">
                    <label asp-for="blog.TypeId" for="" class="form-label">Type</label>
                    <select class="form-select "
                            asp-for="blog.TypeId">

                        <option selected>Select one</option>
                        @{
                            foreach(var t in Model.types)
                            {
                                <option value=@t.Id>@t.Name</option>
                            }
                        }

                    </select>
                </div>
             
              

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>
    </section>
<script src="boostrap/js/bootstrap.min.js"></script>
